<div class="row">
  <div class="col-lg-12 margin-top-20">
    <h1 class="page-header">Lunar Map</h1>
  </div>
</div>
<div class="row">
  <div class="col-md-3 margin-bottom-25">
    <%= select_tag :vehicle_id, options_for_select(@vehicle_ids.map { |vehicle_id| [vehicle_id, vehicle_id]}), {:prompt => "- Select Vehicle -", class: 'form-control'} %>
  </div>
  <div class="col-md-3 margin-bottom-25">
    <%= text_field :vehicle, :lat, class: 'form-control' %>
  </div>
  <div class="col-md-3 margin-bottom-25">
    <%= text_field :vehicle, :lng, class: 'form-control' %>
  </div>
  <div class="col-md-3 margin-bottom-25">
    <%= submit_tag 'Locate', {class: 'btn btn-primary form-control', id: 'locate' } %>
  </div>
</div>


<div id="map" class='margin-bottom-25'></div>

<script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAzB0YycmcaBF0lualcTRlhZdz4bL4pd8A&callback=initMap">
</script>
